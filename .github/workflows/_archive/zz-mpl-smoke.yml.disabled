name: MPL Smoke

on:
  push:
    branches: [ chore/phase3-metrics-schema-and-collector ]

jobs:
  smoke:
    runs-on: ubuntu-latest
    env:
      MPLBACKEND: Agg
    steps:
      - name: Checkout
        uses: actions/checkout@v5

      - name: Setup Python 3.11
        uses: actions/setup-python@v6
        with:
          python-version: "3.11"

      - name: Upgrade pip
        run: python -m pip install -U pip

      - name: Install tiny deps
        run: pip install numpy matplotlib

      - name: Headless PNG
        run: |
          python - <<'PY'
import os, numpy as np, matplotlib, matplotlib.pyplot as plt
print("Backend:", matplotlib.get_backend())
os.makedirs(".sim_smoke", exist_ok=True)
x = np.linspace(0, 6.283, 200); y = np.sin(x)
plt.plot(x,y); plt.title("Headless OK"); plt.savefig(".sim_smoke/ok.png", dpi=120)
print("Saved .sim_smoke/ok.png")
PY

      - name: Upload artifact
        if: always()
        uses: actions/upload-artifact@v5
        with:
          name: mpl-smoke
          path: .sim_smoke/*.png
          if-no-files-found: error
