# ============
# Global .env example (do not commit real secrets)
# ============
# Used locally (compose, scripts) & to seed CI secrets mapping.

# --- AWS auth (prefer OIDC in CI; use profiles locally) ---
AWS_REGION=us-east-1
AWS_PROFILE=colink-dev
AWS_ACCOUNT_DEV=111111111111
AWS_ACCOUNT_STAGING=222222222222
AWS_ACCOUNT_PROD=333333333333

# --- Terraform S3 backend (one per env) ---
TF_BACKEND_BUCKET_DEV=colink-tf-backend-dev
TF_BACKEND_BUCKET_STAGING=colink-tf-backend-staging
TF_BACKEND_BUCKET_PROD=colink-tf-backend-prod
TF_BACKEND_REGION=us-east-1

# --- Naming / tags ---
APP_NAME=colink
OWNER=colink
ENV=dev
