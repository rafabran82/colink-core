{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "COLINK Simulation Metrics",
  "type": "object",
  "required": ["schema_version","created_at","backend","python","os","sample_count","value_min","value_max","value_mean","duration_ms","artifacts"],
  "properties": {
    "schema_version": { "type": "integer", "minimum": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "backend": { "type": "string" },
    "python": { "type": "string" },
    "os": { "type": "string" },
    "git_sha": { "type": ["string","null"] },
    "sample_count": { "type": "integer", "minimum": 0 },
    "value_min": { "type": "number" },
    "value_max": { "type": "number" },
    "value_mean": { "type": "number" },
    "value_stdev": { "type": "number" },
    "duration_ms": { "type": "integer", "minimum": 0 },
    "labels": { "type": "object", "additionalProperties": { "type": "string" } },
    "artifacts": {
      "type": "object",
      "required": ["png","ndjson"],
      "properties": {
        "png": { "type": "string" },
        "ndjson": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
